        {
            @foreach (var x in rc.OrderByDescending(r => r.C).ThenBy(r => r.A))
            {
                int xa = x.A;

                <tr>
                    <td>@x.A</td>
                    <td>@("U+" + xa.ToString("X4"))</td>
                    <td>@x.C</td>
                </tr>
            }
        }
        else 
