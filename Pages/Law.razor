        if( s == "" ) 
        {
            return 0 ; 
        }
        if( s[0] == '零' ) 
        {
            s = s.Substring(1) ; 
        }
        if( s[0] == '十' )
        {
            s = "一" + s ; 
        }
        string t = " 一二三四五六七八九" ; 
        return s.Length < 2 ? t.IndexOf( s[0] ) : ( t.IndexOf( s[0] ) * ( s[1] == '百' ? 100 : 10) + x( s.Substring(2) ) ) ; 
    }

